<%= stylesheet_link_tag 'application', media: 'all' %>
<%= javascript_include_tag 'application' %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="text-center">
          <h1 class="top-text-logo">tailwebs.</h1>
        </div>
        <div class="card mt-4">
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group">
                <%= f.label :email, "Username", class: 'control-label' %>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><img src="<%= asset_path('user.png') %>" alt="User" class="small-icon"></span>
                  </div>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :password, class: 'control-label' %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><img src="<%= asset_path('unlock.png') %>" alt="User" class="small-icon"></i></span>
                  </div>
                  <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', id: 'password-field' %>
                  <div class="input-group-append">
                    <span class="input-group-text">
                      <i class="fas fa-eye" id="toggle-password" style="cursor: pointer;"></i>
                    </span>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, class: 'control-label' %>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><img src="<%= asset_path('unlock.png') %>" alt="User" class="small-icon"></i></span>
                  </div>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', id: 'password-confirmation-field' %>
                  <div class="input-group-append">
                    <span class="input-group-text">
                      <i class="fas fa-eye" id="toggle-password-confirmation" style="cursor: pointer;"></i>
                    </span>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <div class="col-md-12 text-center">
                  <%= f.submit "Sign up", class: 'btn btn-primary' %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="card-footer text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', (event) => {
      const togglePassword = document.querySelector('#toggle-password');
      const passwordField = document.querySelector('#password-field');
      const togglePasswordConfirmation = document.querySelector('#toggle-password-confirmation');
      const passwordConfirmationField = document.querySelector('#password-confirmation-field');

      togglePassword.addEventListener('click', function (e) {
        const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordField.setAttribute('type', type);
        this.classList.toggle('fa-eye-slash');
      });

      togglePasswordConfirmation.addEventListener('click', function (e) {
        const type = passwordConfirmationField.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordConfirmationField.setAttribute('type', type);
        this.classList.toggle('fa-eye-slash');
      });
    });
  </script>


